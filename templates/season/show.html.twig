{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <h1>{{ actor.name }}</h1>
    <div>
        <strong>Joue dans les séries :</strong>
        <ul>
            {% for program in actor.programs %}
                <li><a href="{{ path('program_show', {'id': program.id}) }}">{{ program.title }}</a></li>
            {% else %}
                <li>Aucune série associée</li>
            {% endfor %}
        </ul>
    </div>

    <a href="{{ path('app_season_index') }}">back to list</a>

    <a href="{{ path('app_season_edit', {'id': season.id}) }}">edit</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
