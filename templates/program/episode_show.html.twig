

{% extends 'base.html.twig' %}

{% block title %}Episodes {{ program.id }}{% endblock %}

{% block body %}
    <h1> S. {{ season.number }} de {{ program.title }}</h1>
    <h2> E. {{episode.number}} : {{ episode.title}}  </h2>
    
    <p> {{episode.synopsis}}</p>

    <a href="{{ path('program_show', {'slug': program.slug}) }}">
        Retour au programme
    </a>

    <div id="comments">
        <h2>Commentaires</h2>
        <ul>
            {% for comment in comments %}
                <li>
                    {{ comment.comment }} - {{ comment.rate }} - {{ comment.author.id }} - {{ comment.createdAt | date('Y-m-d H:i:s') }}
                </li>
            {% endfor %}
        </ul>
    </div>

    {# Afficher le formulaire de commentaire si l'utilisateur est connect√© #}
    {% if commentForm %}
        <div id="comment-form">
            <h2>Ajouter un commentaire</h2>
            {{ form_start(commentForm) }}
            {{ form_row(commentForm.rate) }}
            {{ form_row(commentForm.comment) }}
            <button type="submit">Envoyer</button>
            {{ form_end(commentForm) }}
        </div>
    {% endif %}
{% endblock %}