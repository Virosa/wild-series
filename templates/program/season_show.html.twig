{% extends 'base.html.twig' %}

{% block title %}Séries {{ program.id }}{% endblock %}

{% block body %}
    
    <h1> S. {{ season.number }} de {{ program.title }}</h1>

    <p> {{season.description}}</p>

        {% if season.episodes %}

        <ul>
            {% for episode in season.episodes %}
            <li>
                <h2>E.{{ episode.number}} : {{ episode.title}}</h2>
                <p>{{episode.synopsis |slice(0, 30)}} ...</p>
               <a href="{{path ('program_episode_show', {'programId':program.id, 'seasonId':season.id, 'episodeId': episode.id}) }}"> voir plus </a> 
            </li>
        
        {% endfor %}
            </ul>

        {% else %}

        <p> pas d'épisodes </p>
        {% endif %}


    <a href="{{ path('program_show', {'id': program.id}) }}">
        Retour au programme
    </a>
{% endblock %}