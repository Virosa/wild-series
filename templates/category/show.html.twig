{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
    <h1>{{ category.name }}</h1>

    {% if programs is not empty %}
        <h2>Séries associées :</h2>
        <ul>
            {% for program in programs %}
                <li>{{ program.id }} : {{ program.title }}</li>
                <p>{{ program.synopsis }}</p>
                <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucune série associée à cette catégorie.</p>
    {% endif %}

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>
{% endblock %}